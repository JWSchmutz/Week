            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"><i class="fas fa-angle-double-down"></i></span>

            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item active">
                        <a class="nav-link" href="/aboutus">About Us <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/whyHDX">Why use HDX?</a>
                    </li>
                    {{#unless username}}
                    <li class="nav-item">
                        <div class="tool-tip-parent"> <a class="nav-link disabled" href="/dashboard">Dashboard </a>
                            <span class="tool-tip">Login to view</span>
                        </div>
                    </li>
                    <li class="nav-item">
                        <div class="tool-tip-parent"> <a class="nav-link disabled" href="/products">Products</a>
                            <span class="tool-tip">Login to view</span>
                        </div>
                    </li>
