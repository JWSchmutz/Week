<div class="main-area" id="loginPg">
    <div class="row">
        <div class="col-sm-12 col-md-6 col-lg-6 m-auto">
            <div class="card card-body">
                <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i> Login</h1>
                {{!-- <% include ./partials/messages %> --}}
                    <form action="/users/login" method="POST">
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="email" id="email" name="email" class="form-control"
                                placeholder="Enter Email" />
                        </div>
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="password" id="password" name="password" class="form-control"
                                placeholder="Enter Password" />
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">Login</button>
                    </form>
                    <div style="text-align: center" class="lead mt-4">
                        <button class="btn btn-primary">Forgot password?</button>
                        <button class="btn btn-primary">Forgot username?</button>
                    </div>
                    <p style="text-align: center" class="lead mt-4">
                        No Account? <a href="/users/register">Register</a>
                    </p>
            </div>
        </div>
        <div class="col-sm-12 col-md-6 col-lg-6 m-auto">
            <div id="loginSubtextBox" class="card card-body">
                <p>Ensure you have the lowest prices for all your critical medical supplies.</p>
            </div>
        </div>
    </div>
</div>