<div class="row">
    <div class="col-12">
        <nav class="navbar navbar-expand-lg navbar">
            <a class="navbar-brand" href="/"><img src="/assets/images/WeekLogo.png" alt="week logo"></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"><i class="fas fa-angle-double-down"></i></span>

            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item active">
                        <a class="nav-link" href="/aboutus">About Us <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/users/register">Register</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="/dashboard">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/product">Products</a>
                    </li>
                </ul>
            </div>
            <div id="right">
                <form class="form-inline my-2 my-lg-0">
                    <a class="nav-link" href="/dashboard">Welcome, {{username}}!</a>
                    <a class="nav-link" href="/users/logout">Logout</a>
                </form>
            </div>
        </nav>
    </div>
</div>
<div class="main-area" id="dashboardPg">
    <h1 class="mt-4">Product List</h1>
    <div class="row">
        <div class="col-12 m-auto">
            <div class="card card-body fit-to-phone">
                <h2>Products</h2>
                <table class="table table-striped rounded" style="background: #D4D5D5">
                    <thead class="thead-dark rounded">
                        <tr>
                            <th scope="col">Product Name:</th>
                            <th scope="col">Manufacturing Price:</th>
                            <th scope="col">Quantity:</th>
                        </tr>
                    </thead>
                    <tbody id="productTable">
                        {{#each result}}
                        <tr>
                            <th scope="row">{{Name}}</th>
                            <td class="text-center">{{Rank}}</td>
                            <td>{{_id}}</td>
                        </tr>
                        {{/each}}
                        {{#each unpaidResult}}
                        <tr>
                            <th scope="row">{{Name}}</th>
                            <td class="text-center"><button id={{_id}}>Purchase Info</button></td>
                            <td>{{_id}}</td>
                        </tr>
                        {{/each}}
                    </tbody>

                </table>
            </div>
        </div>
    </div>
</div>